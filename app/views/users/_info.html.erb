<table class='table'>
  <tr>
    <% if user.present? %>
      <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
    <% end %>
  </tr>
  <tr>
    <th>name</th>
    <td><%= user.name %></td>
  </tr>
  <tr>
    <th>introduction</th>
    <td><%= user.introduction %></td>
  </tr>
</table>

<div class='row'>
  <% if @book.present? && @user.present? %>
    <%= link_to "Edit User", edit_book_user_url(book_id: @book.id, id: @user.id), class: "btn btn-outline-secondary btn-block" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  <% end %>
</div>
